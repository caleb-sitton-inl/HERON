<Simulation verbosity="all">
  <RunInfo>
    <JobName></JobName>
    <WorkingDir>.</WorkingDir>
    <Sequence>debug, debug_output</Sequence>
    <batchSize>1</batchSize>
  </RunInfo>

  <Steps>
    <MultiRun name="debug">
      <Input          class="Files"       type="raven"   >inner_workflow</Input>
      <Input          class="Files"       type=""        >heron_lib</Input>
      <Model          class="Models"      type="Code"    >raven</Model>
      <Sampler        class="Samplers"    type="Grid"    >grid</Sampler>
      <Output         class="DataObjects" type="PointSet">grid</Output>
      <Output         class="OutStreams"  type="Print"   >sweep</Output>
    </MultiRun>
    <IOStep name="debug_output">
      <Input class="DataObjects" type="DataSet">dispatch</Input>
      <Input class="DataObjects" type="HistorySet">cashflows</Input>
      <Output class="OutStreams" type="Print">dispatch_print</Output>
      <Output class="OutStreams" type="Print">cashflows</Output>
      <!-- <Output class="OutStreams" type="Plot">dispatch_plot</Output> -->
      <!-- <Output class="OutStreams" type="Plot">cashflow_plot</Output> -->
    </IOStep>
  </Steps>

  <VariableGroups>
    <Group name="GRO_capacities"></Group>
    <Group name="GRO_outer_results"></Group>
    <Group name="GRO_outer_debug_dispatch"></Group>
    <Group name="GRO_outer_debug_synthetics"></Group>
    <Group name="GRO_outer_debug_cashflows"></Group>
  </VariableGroups>

  <DataObjects>
    <DataSet name="dispatch">
      <Input>scaling</Input>
      <Output>GRO_outer_debug_dispatch,GRO_outer_debug_synthetics</Output>
      <Index var="Time">GRO_outer_debug_dispatch, GRO_outer_debug_synthetics</Index>
      <Index var="_ROM_Cluster">GRO_outer_debug_dispatch, GRO_outer_debug_synthetics</Index>
      <Index var="Year">GRO_outer_debug_dispatch, GRO_outer_debug_synthetics</Index>
    </DataSet>
    <HistorySet name="cashflows">
      <Output>GRO_outer_debug_cashflows</Output>
      <options>
        <pivotParameter>cfYears</pivotParameter>
      </options>
    </HistorySet>
  </DataObjects>

  <Models>
    <Code name="raven" subType="RAVEN">
      <executable>~/projects/raven/raven_framework</executable>
      <outputDatabase>disp_results</outputDatabase>
      <conversion>
        <input source="write_inner.py"/>
      </conversion>
      <alias variable="denoises" type="input">Samplers|MonteCarlo@name:mc_arma_dispatch|constant@name:denoises</alias>
    </Code>
  </Models>

  <Distributions>
  </Distributions>

  <Samplers>
    <MonteCarlo name="mc">
      <constant name="denoises">1</constant>
      <samplerInit>
        <limit>1</limit>
      </samplerInit>
    </MonteCarlo>
  </Samplers>

  <Files>
    <Input name="inner_workflow" type="raven">inner.xml</Input>
    <Input name="heron_lib">../heron.lib</Input>
  </Files>

  <Databases>
    <NetCDF name="dispatch" readMode="overwrite" directory="">
      <variables>GRO_outer_debug_dispatch, GRO_outer_debug_synthetics</variables>
    </NetCDF>
  </Databases>

  <OutStreams>
    <Print name="dispatch_print">
      <type>csv</type>
      <source>dispatch</source>
    </Print>
    <Print name="cashflows">
      <type>csv</type>
      <source>cashflows</source>
    </Print>
    <!-- <Plot name="dispatch_plot" subType="HERON.DispatchPlot">
      <source>dispatch</source>
      <macro_variable>Year</macro_variable>
      <micro_variable>Time</micro_variable>
      <signals>Signal</signals>
    </Plot>
    <Plot name="cashflow_plot" subType="TEAL.CashFlowPlot">
      <source>cashflows</source>
    </Plot> -->
  </OutStreams>
</Simulation>
